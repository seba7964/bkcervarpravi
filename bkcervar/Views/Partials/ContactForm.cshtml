@inherits Umbraco.Web.Mvc.UmbracoViewPage<bkcervar.Models.ContactModel>
@using (Html.BeginUmbracoForm<bkcervar.Controllers.ContactSurfaceController>("HandleFormPost"))
{
    <div class="container col-md-6 col-sm-10 col-xs-12 col-md-offset-3 col-sm-offset-0 col-xs-offset-0">
        <div class="container-fluid" style="margin:50px auto;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-body">
                        
                            <div class="form-group">
                                <label for="emailFrom">Email</label>@Html.TextBoxFor(x => x.Email, new { @class = "emailFrom form-control", placeholder = "Email" })
                            </div>
                            <div class="form-group">
                                <label for="contactName">@Umbraco.Field("#Name Placeholder")</label>@Html.TextBoxFor(x => x.Name, new { @class = "contactName form-control", placeholder = "Name" })
                            </div>
