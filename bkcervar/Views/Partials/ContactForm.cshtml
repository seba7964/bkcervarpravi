                                <div class="form-group">
                                    <label for="dropdownGender">Select Gender</label>
                                    @Html.DropDownListFor(x => x.SelectedGender, Model.ListOfGenders, "--Select Gender--", new { @class = "dropdownGender form-control" })
                                </div>
                            *@
                            <div class="form-group">
                                <label for="contactMessage">@Umbraco.Field("#Message Placeholder")</label>
                                @Html.TextAreaFor(x => x.Message, new { @class = "contactMessage form-control", placeholder = "Message" })
                            </div>
                            <div class="form-group">                        <input class="btn btn-primary" type="Submit" value="Submit" /></div>
                        
                    </div>
                </div>
            </div>
        </div>
