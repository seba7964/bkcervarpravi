@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<div class="container col-md-8 col-md-offset-2">
    <div class="container-fluid" style="margin:50px auto;">
        <div class="panel panel-default">



            <div class="container-fluid">

                <br>
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">



                
    @{
        string[] imageList = CurrentPage.pageImage.Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries);
        string addedActive = "active";
    }

                        @foreach (string img in imageList)
                        {
                            var media = Umbraco.Media(img);
                            <div class="item @addedActive">
                                @{addedActive = "";}

                                <img src="@media.umbracoFile" width="100%" height="345">
                            </div>
                                    }

                


                        @*
                            <div class="item">
                            <img src="@CurrentPage.pageImage" alt="Chania" width="auto" height="345">

                            </div>
                        *@
                        @*
                            <div class="item">
                             <img src="~/media/1015/5.jpg" alt="Flower" width="auto" height="345">
                             </div>

                               <div class="item">
                            <img src="~/media/1014/1.jpg" alt="Flower" width="auto" height="345">
                            </div>
                             </div>
                        *@
                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>






                <div class="panel-heading">
                    <h3>@CurrentPage.pageTitle</h3>
                </div>
                <div class="panel-body">
                    <img src="@CurrentPage.pageUpload" alt="@CurrentPage.Name" style="max-width: 50%;float:right;margin-left:10px;margin-bottom:10px;padding:0px;" />
                    <div style="word-break: break-all;align:left;">
                        @CurrentPage.bodyText
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>