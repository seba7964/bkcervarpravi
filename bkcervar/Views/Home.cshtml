<div class="container col-md-5 col-md-offset-2">
    <div class="container-fluid" style="margin:50px auto;">
        <div class="panel panel-default" style="background-color: rgba(0,0,0,0);border: none;word-break: break-all;">

                    <div class="container-fluid">
                   <div class="panel-header" style="background-color:white">   <h2>NAJAVE I NOVOSTI</h2>
            
                    </div>
                        </div>
                
            



                <div class="container-fluid">
                    
                    <br>
                    @{
                        var cul = Model.CurrentCulture;
                        var langCult = cul + "";
                        if (langCult.Split('-').Length != 1)
                        {
                            langCult = langCult.Split('-')[0];
                        }
                        var notElegantno = langCult == "en";
                        var elegantno = 1096;
                        if (notElegantno)
                        {
                            elegantno = 1062;
                        }
                        var newsNode = Umbraco.TypedContent(elegantno).Children.Reverse().ToList();
                        var newsCount = newsNode.Count;
                        var newsCountToShow = 3;
                    }
                    @foreach (var listItem in @newsNode)
                    {
                        if (newsCountToShow > 0)
                        {
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <a href="@listItem.Url">
                                        <h3 class="panel-title">
                                            @listItem.GetPropertyValue("pageTitle")
                                        </h3>
                                    </a>
                                </div>
                                <div class="panel-body">
                                    @Umbraco.Truncate(@listItem.GetPropertyValue("newsText").ToString(), 200)
                                </div>
                            </div>
                            newsCountToShow--;
                        }
                        else
                        {
                            break;
                        }
                    }
                </div>
            </div>
    </div>
</div>
